# Application Settings
APP_NAME="LMS Recovery Analytics"
APP_ENV=development # development, testing, production
APP_DEBUG=true
APP_URL=http://localhost/lms-recovery-analytics
APP_PORT=80
APP_TIMEZONE=Asia/Kolkata
APP_DEFAULT_LANGUAGE=en
APP_KEY=your-32-character-random-string

# Session Configuration
APP_SESSION_ENABLED=true
APP_SESSION_LIFETIME=7200
APP_SESSION_REGENERATE=300
APP_SESSION_EXPIRE_ON_CLOSE=false
APP_SESSION_COOKIE_NAME=lms_session
APP_SESSION_COOKIE_SECURE=false
APP_SESSION_COOKIE_HTTPONLY=true

# Database Settings
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lms_recovery
DB_USERNAME=root
DB_PASSWORD=

# Middleware Settings
MIDDLEWARE_ENABLED=true
MIDDLEWARE_ERROR_IF_NOT_FOUND=true

# Authentication Middleware
AUTH_MIDDLEWARE_ENABLED=true
AUTH_SESSION_KEY=user_id
AUTH_REDIRECT_TO=/login

# API Middleware
API_MIDDLEWARE_ENABLED=true
API_TOKEN_HEADER=Authorization
API_TOKEN_PREFIX=Bearer

# CORS Middleware
CORS_MIDDLEWARE_ENABLED=true
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=0

# CSRF Protection
CSRF_MIDDLEWARE_ENABLED=true
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_LIFETIME=1440

# Rate Limiting
THROTTLE_MIDDLEWARE_ENABLED=true
THROTTLE_MAX_ATTEMPTS=60
THROTTLE_DECAY_MINUTES=1

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=lms_

# Logging Configuration
LOG_CHANNEL=file
LOG_LEVEL=debug

# Security Settings
SESSION_LIFETIME=120
ENCRYPTION_KEY=your-32-character-encryption-key
PASSWORD_HASH_ALGO=PASSWORD_BCRYPT
PASSWORD_HASH_ROUNDS=12

# Language Configuration
APP_FALLBACK_LANGUAGE=en

# Time Configuration
TIME_FORMAT=Y-m-d H:i:s
DATETIME_FORMAT=Y-m-d H:i:s
DATE_DISPLAY_FORMAT="d M Y"
DATETIME_DISPLAY_FORMAT="d M Y, h:i A"
TIME_ERROR_IF_INVALID=true

# Helper Settings
HELPERS_ENABLED=true
HELPER_ERROR_IF_NOT_FOUND=true

# Library Settings
LIBRARIES_ENABLED=true
LIBRARY_ERROR_IF_NOT_FOUND=true

# Error Reporting
ERROR_REPORTING=E_ALL
DISPLAY_ERRORS=true
LOG_ERRORS=true
ERROR_LOG_PATH=/logs/error.log

# Development Settings (Remove in production)
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
